@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SalesMove>
@{
    ViewBag.Title = "SalesDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<h2>Departmann Satış Detayı</h2>
<br />

<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Current.CurrentName @item.Current.CurrentSurname</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Price</td>
            <td>@item.Piece</td>
            <td>@item.TotalAmount</td>
            <td>@item.Date</td>   
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:dodgerblue"> Yazdır </button>

