@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model  List<SalesMove>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2 style="margin-top:20px">SATIŞLAR</h2>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Product.ProductName</td>
            <td>@item.Current.CurrentName @item.Current.CurrentSurname</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Piece</td>
            <td>@item.Price</td>
            <td>@item.TotalAmount</td>
            <td>@item.Date.ToShortDateString()</td>
            <td><a href="/SalesMove/SalesGet/@item.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/SalesMove/SalesDetails/@item.SatisID" class="btn btn-default" style="background-color:lightcoral; color:white">Detay</a></td>
        </tr>
    }
</table>
<a href="/SalesMove/NewSales/" class="btn btn-primary">Yeni Satış Yap</a>


