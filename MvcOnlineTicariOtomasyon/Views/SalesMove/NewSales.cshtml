@model MvcOnlineTicariOtomasyon.Models.Siniflar.SalesMove
@{
    ViewBag.Title = "NewSales";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form-group" method="post">

    @Html.HiddenFor(x=>x.SatisID)
    @Html.LabelFor(x => x.ProductID)
    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.CurrentID, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.EmployeeID)
    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Piece)
    @Html.TextBoxFor(x => x.Piece, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Price)
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TotalAmount)
    @Html.TextBoxFor(x => x.TotalAmount, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Satış Yap</button>
</form>
