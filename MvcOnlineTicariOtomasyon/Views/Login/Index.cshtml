<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Gİrİş Formu</a>
            </div>
            <div class="social">
                <li><a href="https://www.instagram.com/selvi.topcuu/"><span class="fa fa-instagram"></span></a></li>
                <li><a href="https://twitter.com/"><span class="fa fa-twitter"></span></a></li>
                <li><a href="https://www.linkedin.com/in/selvi-top%C3%A7u-99a137a6/"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="https://myaccount.google.com/profile/profiles-summary?hl=tr"><span class="fa fa-google-plus"></span></a></li>
                <li><a href="https://github.com/"><span class="fa fa-github"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Proje Geliştirme</p>
                    <h1>Asp.Net Mvc5 ile</h1>
                    <h2>Dinamik Web Sitesi Geliştirme</h2>
                    <p>
                        Admin, Personel kişisel sayfası ve cari kişisel sayfası olak üzere 3 tane temel yapımız bulunmaktadır.Giriş yapmak istediğiniz yetki durumuna göre sağ taraftan ilgili menüyü seçin.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#"> New Firmalar</a></li>
                            <li><a class="read" href="#">Ürünlerimiz</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2"> Kayıt Ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Cari Girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Personel Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2018 Project. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->


    @Html.Action("CurrentSave", "Login")

    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Giriş Formu</h3>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {

                            <input type="text" class="name" name="UserName" Placeholder="Kullanıcı Adınız" required="" />
                            <input type="password" class="Password" name="Password" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Giriş Formu</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CurrentLogin", "Login", FormMethod.Post))
                        {

                            <input type="text" class="name" name="CurrentMail" Placeholder="Mail Adresiniz" required="" />
                            <input type="password" class="password" name="CurrentPassword" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }
                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifremi Unuttum?</a></h6>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

</body>
