
@model MvcOnlineTicariOtomasyon.Models.Siniflar.Department
@{
    ViewBag.Title = "DepartmentGet";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<h2>Departman Güncelleme</h2>
<br />
@using (Html.BeginForm("DepartmentUpdate", "Department", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentName)
        @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmentID)
    </div>
    <button class="btn btn-success" style="background-color:lightgreen">Güncelle</button>
}
