@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Ürün Listesi</h2>
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara"  />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Brand</td>
            <td>@item.Stock</td>
            <td>@item.UnitPrice₺</td>
            <td>@item.ListPrice₺</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Product/ProductDelete/@item.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/ProductGet/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Product/MakeSale/@item.ProductID" class="btn btn-default" style="background-color:cornflowerblue">Satış Yap</a></td>
        </tr>
    }

</table>
<a href="/Product/NewProduct/" class="btn btn-primary">Yeni Ürün</a>