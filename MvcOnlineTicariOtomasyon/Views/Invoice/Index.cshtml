@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Fatura</h2>

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InvoiceNo @item.InvoiceSerialNo</td>
            <td>@item.Date</td>
            <td>@item.Hour</td>
            <td>@item.Total₺</td>
            <td><a href="/Invoice/InvoiceGet/@item.EmployeeID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Invoice/InvoiceDetails/@item.EmployeeID" class="btn btn-success" style="background-color:lightcoral">Detaylar</a></td>
            <td><a href="/Invoice/InvoiceDetails/@item.EmployeeID" class="btn btn-success" style="background-color:thistle">Kalem</a></td>
        </tr>
    }

</table>
<a href="/Invoice/InvoiceAdd/" class="btn btn-primary">Fatura Girişi</a>
<br /><br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popop Diyalog Ekranı </h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri Sıra-No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceSerialNo</td>
                            <td>@item.Total</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>