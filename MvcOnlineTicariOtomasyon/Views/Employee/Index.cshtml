@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td><img src="@item.EmployeeImage" style="width:150px; height:100px;"/></td>
            <td>@item.Department.DepartmentName</td>
            <td><a href="/Employee/EmployeeGet/@item.EmployeeID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentEmployeeSales/@item.EmployeeID" class="btn btn-success" style="background-color:lightcoral">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Employee/EmployeeAdd/" class="btn btn-primary">Personel Ekle</a>