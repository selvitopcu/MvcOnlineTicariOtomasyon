@model MvcOnlineTicariOtomasyon.Models.Siniflar.Category
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" id="Btn1">Kaydet</button>
    <script>
        $("#Btn1").click(function () {
            alert("Kategori başarılı bir şekilde eklendi")
        });
    </script>
</form>

